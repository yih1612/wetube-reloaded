extends base

block content
  .upload__container
    .upload__video
      video#preview
      button#actionBtn.social__btn Start Recording
    if errorMessage
      +message("error", errorMessage)
    form(method="POST", enctype="multipart/form-data")
      label(for="video") Video File
      input#video(name="video", type="file", accept="video/*", required)
      label(for="thumb") Thumbnail File
      input#thumb(name="thumb", type="file", accept="image/*", required)
      input(
        name="title",
        placeholder="Title",
        type="text",
        required,
        maxlength=80
      )
      input(
        name="description",
        placeholder="Description",
        type="text",
        required,
        minlength=2
      )
      input(
        name="hashtags",
        placeholder="Hashtags, separated by comma.",
        type="text",
        required
      )
      input(type="submit", value="Upload Video")

block scripts
  script(src="/static/js/recorder.js")
