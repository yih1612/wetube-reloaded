mixin video(video)
  a.video-mixin(href=`/videos/${video.id}`)
    if isHeroku
      .video-mixin__thumb(
        style=`background-image:url(${video.thumbUrl});background-size:cover;background-position:center;`
      )
    else
      .video-mixin__thumb(
        style=`background-image:url(/${video.thumbUrl});background-size:cover;background-position:center;`
      )
    .video-mixin__data
      span.video-mixin__title= video.title
      .video-mixin__meta
        span #{ video.owner.name || user.name } â€¢&nbsp;
        span #{ video.meta.views }&nbsp;views
