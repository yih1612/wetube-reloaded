header
  a.header__logo(href="/")
    i.fab.fa-youtube
  nav
    ul
      li
        a(href="/search")
          i.fas.fa-search
      if loggedIn
        li
          a(href="/videos/upload") Upload Video
        li
          a(href="/users/edit") Edit Profile
        li
          a(href="/users/logout") Log Out
        li
          a(href=`/users/${loggedInUser._id}`)
            if !loggedInUser.avatarUrl
              .header__no-avatar
                span= loggedInUser.name.substring(0, 1)
            else
              if isHeroku
                img.header__avatar(src=loggedInUser.avatarUrl, crossorigin)
              else
                img.header__avatar(
                  src="/" + loggedInUser.avatarUrl,
                  crossorigin
                )

      else
        li
          a(href="/login") Login
        li
          a.header__btn(href="/join") Join
